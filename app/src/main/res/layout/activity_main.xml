<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <TextView
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="30dp"
        android:text="الصفحة الرئيسية"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#395185"
        android:layoutDirection="ltr"
        />

    <ImageView
        android:id="@+id/Ava"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/avatar"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-45dp"

        />

    <ImageButton
        android:id="@+id/f1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="0dp"
        android:background="@color/white"
        android:onClick="onClickImageEmergencyOrder"
        android:src="@drawable/frame1" />

    <TextView
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="15dp"
        android:layoutDirection="rtl"
        android:text="خدمات اخرى"
        android:textColor="#395185"
        android:background="@color/white"
        android:textSize="30dp" />

    <ImageButton
        android:id="@+id/f2"
        android:layout_width="174dp"
        android:layout_height="167dp"
        android:layout_gravity="center"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:onClick="onClickImageF1"
        android:src="@drawable/frame2" />

    <ImageButton
        android:id="@+id/f3"
        android:layout_width="174dp"
        android:layout_height="167dp"
        android:layout_gravity="center"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:onClick="onClickImageF2"
        android:src="@drawable/frame3" />

    <ImageButton
        android:id="@+id/f4"
        android:layout_width="174dp"
        android:layout_height="167dp"
        android:layout_gravity="center"
        android:layout_marginLeft="-95sp"
        android:layout_marginTop="-355dp"
        android:background="@color/white"
        android:onClick="onClickImageF3"
        android:src="@drawable/frame4" />

    <ImageButton
        android:id="@+id/f5"
        android:layout_width="174dp"
        android:layout_height="167dp"
        android:layout_gravity="center"
        android:layout_marginLeft="-95sp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:onClick="onClickImageF4"
        android:src="@drawable/frame5" />

    <ImageButton
        android:id="@+id/f6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="0dp"
        android:background="@color/white"
        android:onClick="onClickImageEmergencyOrder"
        android:src="@drawable/frame6" />
    </LinearLayout>
</ScrollView>